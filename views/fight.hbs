<div class="fight-container">
    <h1>Fight!</h1>
    <div class="versus-container">
        <ul class="warrior-description">
            <li>{{warrior1.name}}</li>
            <li>strength:<span>{{warrior1.str}}⚔️</span></li>
            <li>defence:<span>{{warrior1.def}}🛡️</span></li>
            <li>endurance:<span>{{warrior1.end}}⚡</span></li>
            <li>agility:<span>{{warrior1.agi}}💨</span></li>
            <li>Health:<span>{{calcInitHealth warrior1.end}}❤️</span></li>
        </ul>
        ⚔️
        <ul class="warrior-description">
            <li>{{warrior2.name}}</li>
            <li>strength:<span>{{warrior2.str}}⚔️</span></li>
            <li>defence:<span>{{warrior2.def}}🛡️</span></li>
            <li>endurance:<span>{{warrior2.end}}⚡</span></li>
            <li>agility:<span>{{warrior2.agi}}💨</span></li>
            <li>Health:<span>{{calcInitHealth warrior2.end}}❤️</span></li>
        </ul>
    </div>

    <ul class="battle-log">
        {{#each battleLog}}
            <li>{{this}}</li>
        {{/each}}
    </ul>

    <p class="winner">The winner: {{winner.name}}</p>

</div>